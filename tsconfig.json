{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "noImplicitAny": true,
    "lib": [
      "es5", "dom", "es2015.core"
    ]
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}